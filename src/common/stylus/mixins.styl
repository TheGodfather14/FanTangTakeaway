$green = #02a774
$yellow = #F5A100
$bc = #e4e4e4
// 一像素下边框
bottom-border-1px($color)
    border none
    position relative
    &:after
        background-color $color
        bottom 0
        content ''
        height 1px
        left 0
        position absolute
        transform scaleY(0.5)
        width 100%
// 一像素上边框
top-border-1px($color)
    position relative
    &::before
        background-color $color
        content ''
        height 1px
        left 0
        position absolute
        top 0
        width 100%
        z-index 200
// 根据像素比缩放 1px 像素边框
@media only screen and (-webkit-device-pixel-ratio 2)
    .border-1px
        &::before
            transform scaleY(0.5)
@media only screen and (-webkit-device-pixel-ratio 3)
    .border-1px
        &::before
            transform scaleY(0.333333)
// 根据像素比来使用 2x 图 3x 图
bg-image($url)
    background-image url($url + '@2x.png')
    @media (-webkit-min-device-pixel-ratio 3), (min-device-pixel-ratio 3)
        background-image url($url + '@3x.png')
// 清除浮动
clearFix()
    *zoom 1
    &::after
        clear both
        content ''
        display block